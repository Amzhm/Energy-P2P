# ================================
# ENERGY P2P DATA PLATFORM
# Environment Variables
# ================================

# ================================
# PostgreSQL (Data Warehouse)
# ================================
POSTGRES_USER=energy_user
POSTGRES_PASSWORD=energy_password
POSTGRES_DB=energy_dwh

# ================================
# MongoDB
# ================================
MONGO_USER=mongo_admin
MONGO_PASSWORD=mongo_password

# Mongo Express Web UI
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=admin123

# ================================
# Redis
# ================================
REDIS_PASSWORD=redis_password

# ================================
# Apache Airflow
# ================================
AIRFLOW_USER=admin
AIRFLOW_PASSWORD=admin123

# ================================
# Apache Superset
# ================================
SUPERSET_USER=admin
SUPERSET_PASSWORD=admin123

# ================================
# Grafana
# ================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# ================================
# Jupyter Notebook
# ================================
JUPYTER_TOKEN=energy123

# ================================
# Project Configuration
# ================================
PROJECT_NAME=energy-p2p-platform
ENVIRONMENT=development
TZ=Europe/Paris

# ======================
# HDFS CONFIGURATION
# ======================
HDFS_NAMENODE_HOST=localhost
HDFS_NAMENODE_PORT=9870
HDFS_WEBHDFS_PORT=9870
HDFS_USER=root

# Paths HDFS
HDFS_BRONZE_PATH=/data-lake/bronze
HDFS_SILVER_PATH=/data-lake/silver
HDFS_GOLD_PATH=/data-lake/gold

# ======================
# KAFKA CONFIGURATION
# ======================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_INGESTION=data-ingestion
KAFKA_TOPIC_WEATHER=weather-updates
KAFKA_TOPIC_PRICES=spot-prices

# ======================
# API CONFIGURATION
# ======================
# Open-Meteo API
OPEN_METEO_API_URL=https://api.open-meteo.com/v1/forecast
OPEN_METEO_LATITUDE=51.5074
OPEN_METEO_LONGITUDE=-0.1278

# Energy-Charts API
ENERGY_CHARTS_API_URL=https://api.energy-charts.info/price
ENERGY_CHARTS_BZN=DE-LU

# PVGIS API
PVGIS_API_URL=https://re.jrc.ec.europa.eu/api/v5_2

# ======================
# LOCAL STORAGE
# ======================
LOCAL_DATA_DIR=../data/ingestion/temp
LOCAL_LOGS_DIR=../data/logs

# ======================
# INGESTION SETTINGS
# ======================
CHUNK_SIZE=50000
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5
REQUEST_TIMEOUT_SECONDS=30